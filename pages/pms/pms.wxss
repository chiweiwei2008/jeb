}

/*下拉列表*/
.list-msg {
    display: flex;
    flex-direction: row; 
    padding: 0 20rpx;
    background-color: #fff;
    position: relative;
    width: 100%;
    font-size: 14px;
    font-weight: 700;
    font-family: "Microsoft soft";

}
 
.list-msg1 {
    height: 60rpx;
    display: flex;
    align-items:center;
    justify-content: space-between;
    width: 30%;

  
}
 
.list-msg .list-msg2 {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ccc;
    padding: 0 10rpx;
    
   
}
 
.select_box {
    background-color: #eee;
    padding: 0 10rpx;
    width: 93%;
    position: absolute;
    top: 60rpx;
    left:31%;
    z-index: 99;
    overflow: hidden;
    animation: myfirst 0.5s;
}
 
@keyframes myfirst {
    from {
        height: 0rpx;
    }
 
    to {
        height: 1500rpx;
    }
}
 
.select_one {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1px solid #ccc;

}

.listblock{
   display: flex;
  flex-direction:column; 
  width:70%;
}

/*搜索循环列表*/
.tablelist{
   width: 100%;
   font-size:8pt; 
}
.tabletitle{
   display: flex;
   flex-direction:row; 
   width: 100%;
}
.tableth{
  justify-content: center;
  background: #2a579a;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  font-size:10px;
  font-weight: 700;
  width: 20%;
}
.scrollcss{
  height: 1200rpx;
}
.loading{
  padding: 10rpx;
  text-align: center;
}
.loading:before{
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  animation: rotate 1s linear infinite;
}
.loading.complete:before{
  display: none;
}


