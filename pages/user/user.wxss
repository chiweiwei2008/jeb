/* pages/user/user.wxss */

.container {
  width: 100%;
  height: 100%;
  padding-top: 0;
}

/* 头部样式 */

.head {
  width: 100%;
  height: 300rpx;
  background-color: #2a579a;
  display: flex;
  flex-direction: row;
}

.userimg {
  width: 30%;
  position: relative;
  margin: auto;
  text-align: center;
}

.userimg image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.usertxt {
  width: 70%;
  position: relative;
  margin: auto;
}

/* Gird样式 */
.page{
  width: 100%;
}
.weui-grids {
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  border-left: 1rpx solid rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 20px 10px;
  width: 25%;
  box-sizing: border-box;
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.weui-grid_active {
  background-color: #ececec;
}

.weui-grid__icon {
  display: block;
  width: 28px;
  height: 28px;
  margin: 0 auto;
}

.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: rgba(0, 0, 0, 0.9);
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
