  width: 10%;
}
.tablethtwo{
  justify-content: center;
  background: #2a579a;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  font-size:10pt;
  font-weight: 700;
  width: 90%;
}
.scrollcss{
  height: 1200rpx;
}
.loading{
  padding: 10rpx;
  text-align: center;
}
.loading:before{
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  animation: rotate 1s linear infinite;
}
.loading.complete:before{
  display: none;
}
